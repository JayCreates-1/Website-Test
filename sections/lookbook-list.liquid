<style>



  /* Mobile-specific styles (up to 767px) */
@media (max-width: 767px) {
   .l-l__g {
   
    gap: 16px;
    padding-right: 2rem;
    overflow: visible !important;
    height: auto !important;
    flex: none !important;
    display: flex !important;
             flex-direction: row !important;
        overflow-x: scroll !important;
  }
}


  
.lb-s[data-shopify-id='{{ section.id }}'] {
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  margin-top: {{ section.settings.top_spacing }}px;
  margin-bottom: {{ section.settings.bottom_spacing }}px;
  display: flex;
  flex-direction: column;
  padding: 2rem 0;
  height: auto;

    {% if section.settings.background-color-trans %}
  background-color:transparent !important;
    {% else %}
      background-color: {{section.settings.background-color}} !important;
  {% endif %}
}

.lb-s[data-shopify-id='{{ section.id }}'] .l-l_h {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 2rem;
}

.lb-s[data-shopify-id='{{ section.id }}'] .lb-l__s-tt {
  font-size: {{ section.settings.section_title_size_desktop }}px;
  margin: 0;
  color: {{ section.settings.section_title_color }};
  font-weight: {% if section.settings.section_title_weight %} 700 {% else %} 500 {% endif %};
}

.lb-s[data-shopify-id='{{ section.id }}'] .l-l__g {
  display: flex;
  gap: {{ section.settings.gap }}px;
  overflow-x: auto;
  scrollbar-width: thin;
  
  padding: 1rem 2rem;
  flex: 1;
  margin-top: {{ section.settings.header_grid_spacing }}px;
}

.lb-s[data-shopify-id='{{ section.id }}'] .l-l__g::-webkit-scrollbar {
  height: 4px;
}

.lb-s[data-shopify-id='{{ section.id }}'] .l-l__g::-webkit-scrollbar-track {
  margin: 0 2rem;
}

.lb-s[data-shopify-id='{{ section.id }}'] .l-l__g::-webkit-scrollbar-thumb {
  border-radius: 2px;
}

.lb-s[data-shopify-id='{{ section.id }}'] .lb-l__i {
  flex: 0 0 auto;
  display: flex;
  flex-direction: column;
}

.lb-s[data-shopify-id='{{ section.id }}'] .lb-l__i-w {
  position: relative;
  display: inline-block;
  height: 600px;
  min-height: 600px;
  overflow: hidden;
  border-radius: {{ section.settings.image_border_radius }}px;
}

.lb-s[data-shopify-id='{{ section.id }}'] .lb-l___i {
  width: auto;
  height: 100%;
  display: block;
  object-fit: cover;
  object-position: center;
}

.lb-s[data-shopify-id='{{ section.id }}'] .lb-l___c {
  max-width: var(--image-width);
  padding: 1rem 0;
}

.lb-s[data-shopify-id='{{ section.id }}'] .lb-l___t {
  font-size: {{ section.settings.lookbook_title_size_desktop }}px;
  margin: 0;
  color: {{ section.settings.title_color }};
  text-decoration: none;
  width: auto;
  max-width: 100%;
  margin-top: 1rem;
  font-weight: {% if section.settings.title_weight %} 700 {% else %} 500 {% endif %};
}

.lb-s[data-shopify-id='{{ section.id }}'] .lb-l___d {
  font-size: {{ section.settings.description_size_desktop }}px;
  margin: 0.5rem 0 0;
  color: {{ section.settings.description_color }};
  width: auto;
  max-width: 700px;
}

.lb-s[data-shopify-id='{{ section.id }}'] .lb-l__l {
  text-decoration: none;
  color: inherit;
  display: block;
  width: fit-content;
}

.lb-s[data-shopify-id='{{ section.id }}'] .lb-l___i {
  transition: transform 0.3s ease;
}

.lb-s[data-shopify-id='{{ section.id }}'] .lb-l__l:hover .lb-l___i {
  transform: scale(1.02);
}

.lb-s[data-shopify-id='{{ section.id }}'] .lb-l__i:last-child {
  padding-right: 5rem;
}

@media screen and (max-width: 768px) {
  .lb-s[data-shopify-id='{{ section.id }}'] {
    margin-top: {{ section.settings.top_spacing_mobile }}px;
    margin-bottom: {{ section.settings.bottom_spacing_mobile }}px;
    height: auto;
    display: block;
  }
  
  .lb-s[data-shopify-id='{{ section.id }}'] .l-l__g {
    flex-direction: column;
    gap: {{ section.settings.gap_mobile }}px;
    padding-right: 2rem;
    overflow: visible;
    height: auto;
    flex: none;
  }
  
  .lb-s[data-shopify-id='{{ section.id }}'] .lb-l__i {
    width: 100%;
    position: relative;
    overflow: visible;
  }

  .lb-s[data-shopify-id='{{ section.id }}'] .lb-l__i-w {
    height: auto;
    width: 100%;
    position: relative;
    display: block;
    min-height: 200px;
  }

  .lb-s[data-shopify-id='{{ section.id }}'] .lb-l___i {
    width: 100%;
    height: auto;
    display: block;
    position: relative;
  }

  .lb-s[data-shopify-id='{{ section.id }}'] .lb-l___c {
    max-width: 100%;
    padding: 1rem 0;
  }

  .lb-s[data-shopify-id='{{ section.id }}'] .lb-l__i:last-child {
    padding-right: 0;
  }

  /* Hide items beyond the mobile limit */
  {% if section.settings.mobile_item_limit != 'all' %}
    .lb-s[data-shopify-id='{{ section.id }}'] .lb-l__i:nth-child(n + {{ section.settings.mobile_item_limit | plus: 1 }}) {
      display: none;
    }
  {% endif %}

  .lb-s[data-shopify-id='{{ section.id }}'] .lookbook-list__controls {
    display: none;
  }

  .lb-s[data-shopify-id='{{ section.id }}'] .lb-l___t {
    font-size: {{ section.settings.lookbook_title_size_mobile }}px;
  }

  .lb-s[data-shopify-id='{{ section.id }}'] .lb-l__s-tt {
    font-size: {{ section.settings.section_title_size_mobile }}px;
  }

  .lb-s[data-shopify-id='{{ section.id }}'] .lb-l___d {
    font-size: {{ section.settings.description_size_mobile }}px;
  }
}

@media screen and (min-width: 2000px) {
  {% if section.settings.section_height == 'auto' %}

  .lb-s[data-shopify-id='{{ section.id }}'] .lb-l__i-w {
      height: 750px;
      margin-left: auto;
  }
{% endif %}

}


</style>

<div class="lb-s" data-shopify-id="{{ section.id }}">
  <div class="l-l_h">
    {% if section.settings.title != blank %}
      <h2 class="lb-l__s-tt">{{ section.settings.title }}</h2>
    {% endif %}
  </div>
  
  <div class="l-l__g">
    {%- for block in section.blocks -%}
      <div class="lb-l__i" {{ block.shopify_attributes }}>
        <a href="{{ block.settings.link }}" class="lb-l__l">
          <div class="lb-l__i-w">
            {%- if block.settings.image != blank -%}
              <img
                srcset="{%- if block.settings.image.width >= 200 -%}{{ block.settings.image | image_url: width: 200 }} 200w,{%- endif -%}
                  {%- if block.settings.image.width >= 400 -%}{{ block.settings.image | image_url: width: 400 }} 400w,{%- endif -%}
                  {%- if block.settings.image.width >= 600 -%}{{ block.settings.image | image_url: width: 600 }} 600w,{%- endif -%}"
                src="{{ block.settings.image | image_url: width: 400 }}"
                loading="lazy"
                class="lb-l___i"
                alt="{{ block.settings.image.alt | escape }}"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}"
              >
            {% else %}
              {% assign default_image_index = forloop.index | modulo: 4 | plus: 1 %}
              <img
                src="{{ 'lookbook-' | append: default_image_index | append: '.jpg' | asset_img_url: 'master' }}"
                loading="lazy"
                class="lb-l___i"
                alt="{{ block.settings.title | escape }}"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}"
              >
            {% endif %}
          </div>
          
          <div class="lb-l___c">
            {% if block.settings.description != blank %}
            <h3 class="lb-l___t">{{ block.settings.title }}</h3>
              <p class="lb-l___d">{{ block.settings.description }}</p>
            {% endif %}
          </div>
        </a>
      </div>
    {%- endfor -%}
  </div>
</div>


