<!--   TOP HEADER   -->
{% assign pjCnfg = section.settings %}

<style>
  .password-modal-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    background-color: rgba(0, 0, 0, 0);
    -webkit-backdrop-filter: blur(0px);
    backdrop-filter: blur(0px);
    transition: opacity 0.8s cubic-bezier(0.16, 1, 0.3, 1),
                visibility 0.8s cubic-bezier(0.16, 1, 0.3, 1),
                backdrop-filter 0.8s cubic-bezier(0.16, 1, 0.3, 1),
                -webkit-backdrop-filter 0.8s cubic-bezier(0.16, 1, 0.3, 1),
                background-color 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    will-change: backdrop-filter, opacity;
    pointer-events: auto;
  }

  .password-container {
    position: relative;
    background-color: var(--password-form-color);
    border-radius: 8px;
    transform: scale(0.98);
    opacity: 0;
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    will-change: transform, opacity;
    z-index: 10000;
    pointer-events: auto;
  }

  .password-modal-background.visible {
    opacity: 1 !important;
    visibility: visible !important;
    display: flex !important;
    background-color: rgba(0, 0, 0, 0.2);
    -webkit-backdrop-filter: blur(10px);
    backdrop-filter: blur(10px);
    pointer-events: auto;
  }

  .password-modal-background.visible .password-container {
    transform: scale(1);
    opacity: 1;
    display: flex !important;
  }

  @supports not ((backdrop-filter: blur(10px)) or (-webkit-backdrop-filter: blur(10px))) {
    .password-modal-background {
      background-color: rgba(0, 0, 0, 0);
    }
    .password-modal-background.visible {
      background-color: rgba(0, 0, 0, 0.7);
    }
  }
</style>

<a style="width: 100%; display: block; position: relative; margin: 20px 0 40px 0px;" aria-current="page" class="logo-link w-inline-block w--current">
    {% if settings.show_password_logo %}
        {% if settings.password_screen_logo %}
            <img style="width:{{ settings.password_screen_logo_size }}px;" src="{{ settings.password_screen_logo | image_url}}"  alt="" class="logo">
        {% else %}
            <img src="{{ 'Supreme-dummy.png' | asset_url }}" style="width:{{ settings.password_screen_logo_size }}px;" alt="" class="logo">
        {% endif %}
    {% endif %}

    {% if pjCnfg.show_store_ownwer_txt %}
        <p class="password-store-owner" style="
        {% if settings.disable_highlight_animation %} animation-duration: 0s; {% endif %}
        {% if pjCnfg.bold_store_ownwer_txt %}
                font-weight: bold;
        {% endif %}
        {% if pjCnfg.enable_owner_highlight_txt %}
                --store-owner-highlight-color: {{ pjCnfg.store_owner_highlight_color }};
                --store-owner-highlight-txt-color: {{ pjCnfg.store_owner_highlight_txt_color }};
                --store-owner-txt-color: {{ pjCnfg.store_owner_txt_color }};
        {% else %}
                --store-owner-highlight-color: transparent;
                --store-owner-highlight-txt-color: {{ pjCnfg.store_owner_txt_color }};
                --store-owner-txt-color: {{ pjCnfg.store_owner_txt_color }};
        {% endif %}
                ">
            {{ pjCnfg.store_owner_txt }}
        </p>
    {% endif %}
</a>


<!--  PASSWORD MODAL   -->
<div class="password-modal-background">
    <div class="password-container" style="--password-form-color: {{ pjCnfg.pass_form_bg_color | color_modify: 'alpha', pjCnfg.pass_form_opacity }};">
        <button class="password-close-btn" style="--pass-form-close-btn-color: {{ pjCnfg.pass_form_cancel_color }};"></button>
        <p class="password-text" style="color: {{ pjCnfg.pass_form_txt_color }};">{{ pjCnfg.pass_form_txt }}</p>
        <div class="password-form-container">
            {%- form "storefront_password",  class: "password-form" -%}
                <input class="password-store-input" name="password" type="password" placeholder="*****"
                       style="
                               background-color: {{ pjCnfg.pass_input_form_color }};
                               color: {{ pjCnfg.pass_form_input_txt_color }};
                               "/>
                <input class="password-store-input-submit" type="submit" value="ENTER"
                       style="
                               background-color: {{ pjCnfg.pass_form_submit_btn_color }};
                               color: {{ pjCnfg.pass_form_submit_btn_txt_color }};
                               "/>
            {%- endform -%}
        </div>
    </div>
</div>

{% if pjCnfg.show_store_ownwer_txt %}
    <p class="password-store-owner-mobile " style="color: {{ pjCnfg.store_owner_txt_color }};">{{ pjCnfg.store_owner_txt }}</p>
{% endif %}

{{ 'password-store-owner.js' | asset_url | script_tag }}

